@model Work.Models.Entity.Tbl_Employee
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Üye Giriş</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Latform - Login and Register Form Templates/dist/vendor/bootstrap-4.5.3/css/bootstrap.min.css" type="text/css">
    <!-- Material design icons -->
    <link rel="stylesheet" href="~/Latform - Login and Register Form Templates/dist/icons/material-design-icons/css/mdi.min.css" type="text/css">
    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300&display=swap" rel="stylesheet">
    <!-- Latform styles -->
    <link rel="stylesheet" href="~/Latform - Login and Register Form Templates/dist/css/latform-style-8.min.css" type="text/css">
</head>
<body>

    @using(Html.BeginForm("Login", "Employee", FormMethod.Post))
    {
    <div class="form-wrapper" style="background: url(../../dist/images/cover1.jpg)">
        <div class="container">
            <div class="card">
                <div class="logo">
                    <img src="~/Latform - Login and Register Form Templates/dist/images/logo-white.png" alt="logo">
                </div>
                <div class="my-5">
                    <h3 class="font-weight-bold">Giriş Yap</h3>
                    <p>Devam etmek için oturum açın</p>
                </div>
                <form>
                    <div class="form-group">
                        <div class="form-icon-wrapper">
                            @Html.LabelFor(x => x.Email, new { style = "font-size: 16px" })
                            @Html.TextBoxFor(x => x.Email, new {@class="form-control",placeholder="Mail Adresi"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-icon-wrapper">
                            @Html.LabelFor(x => x.Password, new { style = "font-size: 16px" })
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Parola" })
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-between align-items-center">
                        <b>@ViewBag.Message</b>
                        <button type="submit" class="btn btn-white">Giriş Yap</button>

                    </div>
                </form>
               
            </div>
        </div>
    </div>
    <!-- Jquery -->
    <script src="~/Latform - Login and Register Form Templates/dist/vendor/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Latform - Login and Register Form Templates/dist/vendor/bootstrap-4.5.3/js/bootstrap.min.js"></script>
    <!-- Latform scripts -->
    <script src="~/Latform - Login and Register Form Templates/dist/js/latform.min.js"></script>
    }

</body>
</html>
